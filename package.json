{
  "name": "rag-joke-bot",
  "version": "1.0.0",
  "description": "RAG-enhanced joke bot using LangGraph and OpenAI",
  "packageManager": "yarn@1.22.22",
  "main": "dist/agent/ragGraph.js",
  "author": "Your Name",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npx @langchain/langgraph-cli dev",
    "start": "npm run dev",
    "studio": "open https://smith.langchain.com/studio?baseUrl=http://localhost:2024",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "check-jokes": "node -e \"console.log('✅ JSON валідний:', JSON.parse(require('fs').readFileSync('data/jokes.json', 'utf8')).length, 'жартів')\""
  },
  "dependencies": {
    "@langchain/core": "^0.3.37",
    "@langchain/langgraph": "^0.2.43",
    "@langchain/openai": "^0.3.0",
    "@langchain/community": "^0.3.0",
    "faiss-node": "^0.5.1",
    "openai": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.3"
  }
}